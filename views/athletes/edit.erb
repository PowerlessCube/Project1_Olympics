<div class="content">

  <form action="/athletes/<%= @athlete.id %>" method="post">

    <h2>Update Athlete</h2>

    <h3><%= @athlete.name %></h3>
    
    <input type="hidden" name="_method" value="put">
    <label for="name">Athlete Name:</label>
    <input type="text" name="name" value="<%=@athlete.name%>"><br>

    <label for="Nation_id">Nationality:</label>
    <select name="nation_id">
      <% @nations.each do | nation | %>
      <option value="<%= nation.id %>"><%= nation.name %></option>
      <% end %>
    </select><br>

    <input type='submit' value="Update Athlete">
  </form>

</div>
